<%= form_for @user do |f| %>
  <%= f.label :username, 'Your username here'%>
  <%= f.text_field :username %><br>
  Email: <%= f.text_field :email, placeholder: "example@email.com" %><br>
  Password: <%= f.password_field :password %><br>
  <%= f.submit "Create" %>
<% end %>